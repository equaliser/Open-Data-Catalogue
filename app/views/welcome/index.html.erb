<article id="welcomePage">
	<header>
		<h1>Welcome</h1>
	</header>

	<p>This is where we do that open data stuff, in Warwickshire.</p>

	<h2>Latest posts from the blog</h2>

	<%
	@rss.items[0..2].each do |item| %>
		<div class="blog">
				<h3><a href="<%=item.link%>"><%=item.title%></a></h3>
				<time datetime="<%=item.pubDate %>" pubdate><%=item.pubDate %></time>
				<%=item.content_encoded %>
		</div>
<% end %>
</article>