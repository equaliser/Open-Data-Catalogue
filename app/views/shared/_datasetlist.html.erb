<table>
  <tr>
    <th class="mainName">Name</th>
	<th class="formats">Formats</th>
    <th class="publishDate">Publish date</th>
  </tr>

<% @datasets.each do |dataset| %>
  <tr>
    <td class="mainName">
		<span class="datasetName"><%= link_to h(dataset.name), dataset %></span>
		<span class="datasetShortDescription"><%=h dataset.short_description %></span>
	</td>
	
	<td class="formats">
		<% for format_url in dataset.format_urls %>
			<span class="formatType"><%=h format_url.format_type.name %></span>
		<% end %>
		</td>
    <td class="publishDate"><%=h dataset.publish_date.strftime("%d/%m/%Y") %></td>
<% end %>
</table>