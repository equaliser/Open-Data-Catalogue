<h1>Listing licences</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Link</th>
  </tr>

<% @licences.each do |licence| %>
  <tr>
    <td><%=h licence.name %></td>
    <td><%=h licence.description %></td>
    <td><%=h licence.link %></td>
    <td><%= link_to 'Show', licence %></td>
    <td><%= link_to 'Edit', edit_licence_path(licence) %></td>
    <td><%= link_to 'Destroy', licence, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New licence', new_licence_path %>