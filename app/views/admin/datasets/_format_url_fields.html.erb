<span class="fields">
	<p class="inputrow">
		<%= f.label :format_type_id %>
		<%= f.select :format_type_id, FormatType.all(:order => "name ASC").collect {|s|
			[s.name, s.id]
		} %>

		<%= f.label :url %>
		<%= f.text_field(:url, :class=>"formatUrlField") %>
	
		<%= f.hidden_field :_destroy %>
		<%= link_to_function "remove", "remove_fields(this)", :class => "niceButton destroyItem" %>
	</p>
</span>