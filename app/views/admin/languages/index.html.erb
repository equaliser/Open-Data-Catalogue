<h1>Languages</h1>

<%= link_to 'New language', new_admin_language_path, :class => "newItem"  %>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%=h language.name %></td>
    <td><%= link_to 'Show', [:admin, language] %></td>
    <td><%= link_to 'Edit', edit_admin_language_path(language) %></td>
    <td><%= link_to 'Destroy', [:admin, language], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

