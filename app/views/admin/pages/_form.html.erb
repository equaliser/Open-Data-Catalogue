<%= f.error_messages %>

 <p>
   <%= f.label :title %>
   <%= f.text_field :title %>
 </p>


<p>
	<%= f.label :author %>
	<%= f.select :author, User.all.collect {|s|
		[s.first_name+" "+s.last_name, s.id]
	} %>
</p>

 <p>
   <%= f.label :date %>
   <%= f.datetime_select :date %>
 </p>
 <p>
   <%= f.label :content %>
   <%= f.text_area :content %>
 </p>

 <p>
   <%= f.label :status %>
   <%= f.select(:status, ["Draft", "Published"])%>
 </p>

 <p>
   <%= f.label :display_order %>
   <%= f.text_field :display_order %>
 </p>