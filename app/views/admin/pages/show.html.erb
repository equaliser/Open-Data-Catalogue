<article id="pageNew" class="item show">
<header class="clearfix">
	<h1><%= link_to h(@title), admin_pages_path %>: <%=h @page.title %></h1>
	<nav><%= link_to 'Edit', edit_admin_page_path(@page), :class => "niceButton editItem"  %></nav>
</header>

<p>
  <b>Author:</b>
  <%=h(@page.user.first_name + " " + @page.user.last_name) %>
</p>

<p>
  <b>Date:</b>
  <%=h @page.date %>
</p>

<p>
  <b>Content:</b>
  <%= @page.content %>
</p>

<p>
  <b>Status:</b>
  <%=h @page.status %>
</p>

<p>
  <b>Order:</b>
  <%=h @page.display_order %>
</p>

</article>