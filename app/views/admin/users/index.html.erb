<article id="pageList" class="list">
	<header id="page" class="clearfix">
		<h1><%= h @title %></h1>
		<nav>
			<%= link_to 'New user', new_admin_user_path, :class => "niceButton newItem"   %>
		</nav>
	</header>



<table>
  <tr>
    <th class="mainName">Login</th>
    <th>Email</th>
	<th colspan="2"></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class="mainName"><%= link_to h(user.login), [:admin, user] %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user), :class => "niceButton editItem"  %></td>
    <td><%= link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete, :class => "niceButton destroyItem"  %></td>
  </tr>
<% end %>
</table>
</article>